
@model TchotchoLoto.Models.Compagnie

<div class="modal-content">
    <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

        <h4 style="display: inline;">Change Application</h4>

        <button type="button" class="close" data-dismiss="modal">&times;</button>

    </div>
    <div class="modal-body row" style="padding:6%;">

        @using (Html.BeginForm("ChangeApplication", "Account", FormMethod.Get, htmlAttributes: new { id = "Change-Application-Form" }))
        {

            <div class="form">

                <div class="form-group col-md-12">
                    @Html.Label("Actual Application", htmlAttributes: new { @class = "control-label" })
                    <div class="form-control control-text-resetable" readonly="readonly" style="overflow-x:auto;">
                        @if (Model != null)
                        {
                            <span>Paytex - </span>@Model.NomCompagnie
                        }
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("New Application", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("ApplicationId", null, "Select Application", htmlAttributes: new { @class = "form-control dropdown-resetable" })
                </div>

            </div>

            <div class="col-md-12 col-sm-12 col-xs-12" style="border-top:1px solid #d7d7d7; padding-top:10px; text-align:right;">

                <button type="submit" class="btn btn-sm btn-info submit">Ok</button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>

            </div>

        }

    </div>
    <a href="~/Controllers/AccountController.cs">~/Controllers/AccountController.cs</a>

</div>

<input type="hidden" data-url="@Url.Action("Login", "Account")" id="login-url" />

