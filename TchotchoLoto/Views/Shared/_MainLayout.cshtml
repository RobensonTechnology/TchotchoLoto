                        {
                            <span class="hide-on-mobile">
                                TCHOTCHO PARYAJ

                            </span>

                            <span class="show-on-mobile" style="display:none;">
                                TCHOTCHO PARYAJ
                            </span>

                        }


                        @*<span class="hide-on-mobile">
                            @if (compagnie != null)
                            {
                                if (application != null)
                                {
                                    @application.ApplicationName
                                }
                                <span>-</span>
