@model TchotchoLoto.Models.UserPointDeVente
@{
    ViewBag.Title = "User Point of Sale ";
    Layout = null;

}

<input type="hidden" class="title" data-title="User Point of Sale " />

<div class="indicator">
   Point of Sale  &nbsp;&nbsp; <span class="glyphicon glyphicon-chevron-right"></span> &nbsp; &nbsp; User Point of Sale
</div>

<div class="header-body">
    <p style="display:inline-block;">
        User Point of Sale  (<span id="hb-nbre-userPointDeVente">
            @if (ViewBag.UserPointDeVentes != null)
            {@ViewBag.UserPointDeVentes.Count}
        else { Write(0); }
        </span>)
        &nbsp;&nbsp;<span class="glyphicon star glyphicon-star text-success"></span>
    </p>

    <div style="display:inline-block;" class="header-buttons">
        <button class="add-after-edit btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#create-user-pointDeVente-modal">
            <span class="glyphicon glyphicon-plus"></span> New Point Of sale User
        </button>
    </div>

</div>

<br />


<div class="page-scroll-content" id="userPointDeVentes-list-pv">
    @Html.Partial("__Index")
</div>



<input id="url-get-userPointDeVente-list" type="hidden" data-url="@Url.Action("__Index", "UserPointDeVentes")" />


<div id="create-user-pointDeVente-modal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-md">

        <div class="modal-content">
            <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

                <h4 style="display: inline;">Add User point of sale</h4>

                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body row" style="padding:6%;">

                @using (Html.BeginForm("_Index", "UserPointDeVentes", FormMethod.Post, htmlAttributes: new { id = "Add-User-PointDeVente-Form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.UserPointDeVenteId)

                    <div class="form">

                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                          
                            @Html.Label("User", htmlAttributes: new { @class = "control-label" })
                            <div class="combobox-auto-select">
                                <input class="input-search" type="text" style="text-transform:capitalize; padding-left:15px; position:absolute; margin:2px; height:30px; background:none; width:80%; color:none; border:none;" />
                                @Html.DropDownList("UserId", null, "Select User", htmlAttributes: new { @class = "form-control ddl-to-filter dropdown-resetable", id = "ddlUserId" })
                            </div>
                        </div>


                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            @Html.Label("Point of Sale", htmlAttributes: new { @class = "control-label" })
                            <div class="combobox-auto-select">
                                <input class="input-search" type="text" style="text-transform:capitalize; padding-left:15px; position:absolute; margin:2px; height:30px; background:none; width:80%; color:none; border:none;" />

                                @Html.DropDownList("PointDeVenteId", null, "Select Point of Sale", htmlAttributes: new { @class = "form-control ddl-to-filter", id = "ddlPointDeVenteId" })
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12" style="border-top:1px solid #d7d7d7; padding-top:10px; text-align:right;">

                        <button type="submit" class="btn btn-sm btn-info submit"><span class="glyphicon glyphicon-save-file"></span> Save <span class="glyphicon glyphicon-refresh loader" style="display:none;"></span> </button>
                        <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>

                    </div>


                }

            </div>

        </div>
    </div>
</div>










<div id="edit-user-pointDeVente-modal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-md">


    </div>
</div>



<!-- Modal 2 Dialog for delete option -->
<div id="delete-modal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

                <h4 style="display: inline;">Delete</h4>

                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>

            <div class="modal-body row" style="padding:7%; text-align:center;">

                <span class="glyphicon glyphicon-alert" style="display:block; font-size: 20px;"></span>
                <h5 class="text-warning" style="display:block;">Do you really want to Delete this Point of Sale ?</h5>

            </div>

            <div class="modal-footer">

                <a class="delete-confirmed btn btn-sm btn-danger" href="#">
                    YES
                </a>

                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">
                    NO
                </button>

            </div>
        </div>

    </div>
</div>



<a id="validation-link" data-toggle="modal" data-target="#modal-dialog-message"></a>

<div id="modal-dialog-message" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

                <h4 style="display: inline;">Message</h4>

            </div>
            <div class="modal-body row" style="padding:7%; text-align:center;">

                <span class="glyphicon glyphicon-info-sign" style="display:block; font-size: 20px;"></span>
                <h5 class="text-info" style="display:block;">@ViewBag.message</h5>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">
                    OK
                </button>
            </div>
        </div>

    </div>
</div>


<div id="pv-overlay-loading" class="overlay-loading bc-overlay-loading" style="display:none;">
    <img src="~/Content/images/loading-gif.gif" alt="Loading" width="50" height="50" />
</div>