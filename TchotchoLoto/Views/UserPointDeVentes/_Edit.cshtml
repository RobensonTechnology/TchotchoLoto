@model TchotchoLoto.Models.UserPointDeVente

<div class="modal-content">
    <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

        <h4 style="display: inline;">Edit Point Of Sale</h4>

        <button type="button" class="close" data-dismiss="modal">&times;</button>

    </div>
    <div class="modal-body row" style="padding:6%;">

        @using (Html.BeginForm("_Index", "UserPointDeVentes", FormMethod.Post, htmlAttributes: new { id = "Edit-User-PointDeVente-Form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.UserPointDeVenteId, htmlAttributes: new { @class = "id-resetable" })

            <div class="form">

                <div class="form">

                    <div class="form-group col-md-6 col-sm-12 col-xs-12">
                        @Html.Label("User", htmlAttributes: new { @class = "control-label" })
                        <div class="combobox-auto-select">
                            <input class="input-search" type="text" style="text-transform:capitalize; padding-left:15px; position:absolute; margin:2px; height:30px; background:none; width:80%; color:none; border:none;" />
                            @Html.DropDownList("UserId", null, "Select User", htmlAttributes: new { @class = "form-control ddl-to-filter dropdown-resetable", id = "ddlUserId" })
                        </div>
                    </div>


                    <div class="form-group col-md-6 col-sm-12 col-xs-12">
                        @Html.Label("Point of Sale", htmlAttributes: new { @class = "control-label" })
                        <div class="combobox-auto-select">
                            <input class="input-search" type="text" style="text-transform:capitalize; padding-left:15px; position:absolute; margin:2px; height:30px; background:none; width:80%; color:none; border:none;" />
                            @Html.DropDownList("PointDeVenteId", null, "Select Point of Sale", htmlAttributes: new { @class = "form-control ddl-to-filter dropdown-resetable", id = "ddlPointDeVenteId" })
                        </div>
                    </div>


                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12" style="border-top:1px solid #d7d7d7; padding-top:10px; text-align:right;">

                <button type="submit" class="btn btn-sm btn-info submit"><span class="glyphicon glyphicon-save-file"></span> Save <span class="glyphicon glyphicon-refresh loader" style="display:none;"></span> </button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>

            </div>

        }

    </div>

</div>




