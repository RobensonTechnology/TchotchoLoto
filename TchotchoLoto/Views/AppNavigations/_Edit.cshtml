
@model TchotchoLoto.Models.AppNavigation

<div class="modal-content">
    <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

        <h4 style="display: inline;">Edit Navigation</h4>

        <button type="button" class="close" data-dismiss="modal">&times;</button>

    </div>
    <div class="modal-body row" style="padding:6%;">

        @using (Html.BeginForm("_Index", "AppNavigations", FormMethod.Post, htmlAttributes: new { id = "Edit-App-Navigation-Form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.AppNavigationId, htmlAttributes: new { @class = "id-resetable" })

            <div class="form">

                <div class="form-group col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.NavigationLabel, "Navigation Label", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NavigationLabel, new { htmlAttributes = new { @class = "form-control editor-resetable" } })
                </div>

                <div class="form-group col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.NavigationLevel, "Level", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NavigationLevel, new { htmlAttributes = new { @class = "form-control editor-resetable" } })
                </div>

                <div class="form-group col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.NavigationOrder, "Order", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NavigationOrder, new { htmlAttributes = new { @class = "form-control editor-resetable" } })
                </div>

            </div>

            <div class="col-md-12 col-sm-12 col-xs-12" style="border-top:1px solid #d7d7d7; padding-top:10px; text-align:right;">

                <button type="submit" class="btn btn-sm btn-info submit"><span class="glyphicon glyphicon-save-file"></span> Save <span class="glyphicon glyphicon-refresh loader" style="display:none;"></span> </button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>

            </div>

        }

    </div>

</div>