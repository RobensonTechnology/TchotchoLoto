@model TchotchoLoto.Models.RapportDeVente

@{

    ViewBag.Title = "Report in progress";
    Layout = null;
}

<input type="hidden" class="title" data-title="Report in progress" />

<div class="indicator">
    Report  &nbsp;&nbsp; <span class="glyphicon glyphicon-chevron-right"></span> &nbsp; &nbsp; Salesman Report in progress
    
</div>


<div class="header-body">
    <p style="display:inline-block;">
        &nbsp;&nbsp;Report Quantity (<span id="hb-nbre-rapportDeVente">
            @if (ViewBag.RapportDeVenteEnCours != null)
            {@ViewBag.RapportDeVenteEnCours.Count}
        else { Write(0); }
        </span>)
        &nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon star glyphicon-star text-success"></span>

    </p>


    <div style="display:inline-block;" class="header-buttons">
        <button style="margin-right: 10px;" data-url="@Url.Action("SendCurrentRapportVendeurParEmail", "Emails")" class="send-current-rapport-btn btn btn-sm btn-primary">  <span class="glyphicon glyphicon-send"></span> <span> Send current Draw E-mail</span> <span class="glyphicon glyphicon-envelope"> </span> </button>


        <button type="submit" class="btn btn-success btn-sm pull-right" id="submit" onclick="imprimer();">
            <span class="glyphicon glyphicon-print"></span> Imprimer
        </button>

    </div>


    

</div>

<br />

<div class="page-scroll-content" id="rapportDeVente-list-pv">

    @Html.Partial("__IndexRapportVendeur")

</div>



<a id="validation-link" data-toggle="modal" data-target="#modal-dialog-message"></a>

<div id="modal-dialog-message" class="modal fade" app-navigation="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #0078d7; border-radius:5px 5px 0 0;">

                <h4 style="display: inline;">Message</h4>

            </div>
            <div class="modal-body row" style="padding:7%; text-align:center;">

                <span class="glyphicon glyphicon-info-sign" style="display:block; font-size: 20px;"></span>
                <h5 class="text-info" style="display:block;">@ViewBag.message</h5>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">
                    OK
                </button>
            </div>
        </div>

    </div>
</div>

<div id="pv-overlay-loading" class="overlay-loading bc-overlay-loading" style="display:none;">
    <img src="~/Content/images/loading-gif.gif" alt="Loading" width="50" height="50" />
</div>